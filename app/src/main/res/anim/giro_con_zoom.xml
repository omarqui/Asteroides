<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <set
        android:duration="2000">
        <scale
            android:fromXScale="3"
            android:toXScale="1"
            android:fromYScale="3"
            android:toYScale="1"
            android:pivotX="50%"
            android:pivotY="50%"/>
        <rotate
            android:pivotY="50%"
            android:pivotX="50%"
            android:fromDegrees="0"
            android:toDegrees="720"/>
    </set>
</set>